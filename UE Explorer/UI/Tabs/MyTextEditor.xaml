<UserControl x:Class="UEExplorer.UI.Tabs.MyTextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="426" d:DesignWidth="514" xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit">
    <Grid Height="Auto" Width="Auto">
		<Grid.RowDefinitions>
			<RowDefinition Height="30*" />
			<RowDefinition Height="3" />
			<RowDefinition Height="127*" />
			<RowDefinition Height="42*" />
			<RowDefinition Height="100*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="85*" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<avalonedit:TextEditor Name="textEditor" ShowLineNumbers="True" IsReadOnly="True" FontSize="14" FontFamily="Courier New" FontWeight="Normal" FontStyle="Normal" Grid.RowSpan="5" LineNumbersForeground="DarkCyan" />
	</Grid>
</UserControl>
